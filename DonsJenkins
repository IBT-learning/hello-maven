pipeline {
    agent any

    stages {
        stage('Git Clone') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Validate') {
                    steps {
                        bat 'mvn validate'
                    }
                }
        stage('Compile') {
        steps {
        bat 'mvn compile'
        }
        }
        stage('Run Test') {
        steps {
        bat 'mvn test'
        }
        }
    }
 }