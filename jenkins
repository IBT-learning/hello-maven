pipeline {
    agent any
parameters {
    string(name:'branch', defaultValue:'master', description:'Enter branch name')
}
    stages {
        stage('Git clone') {
            steps {
               git branch: 'feature/cedric', credentialsId: 'ibt', url: 'https://github.com/IBT-learning/hello-maven.git'
            }
        }
        stage('Verify') {
            steps {
                sh 'ls -lrt'
            }
        }
        stage('Build') {
            steps {
                sh 'ls -lrt'
                    }
                }
        stage('Run Test') {
                    steps {
                        sh 'ls -lrt'
                    }
         }
         stage('Run mvn commands') {
            steps {
                echo "running maven commands"
            }
            }
         stage('saonarqube') {
            steps {
                sh "echo perfoming sonar scans"
            }
            }
        }
    }
